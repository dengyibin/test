<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="New Button"
        android:visibility="visible"/>
    <Button
        android:id="@+id/btn_design_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Design Support"
        android:visibility="visible"/>
    <Button
        android:id="@+id/btn_RxJava2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="RxJava2"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_webView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="webView"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_ijk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ijk"
        android:visibility="gone"/>
    <com.example.sy001.myapplication.flowchart.CircleFlowChartView
        android:id="@+id/flowChart"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <com.example.sy001.myapplication.CustomView
        android:id="@+id/customview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/cpb_green"
        android:visibility="visible"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>